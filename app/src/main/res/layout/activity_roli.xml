<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7643F"
    android:orientation="vertical"
    tools:context=".Auth">


    <ImageView
        android:id="@+id/iv_auth_roli"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"

        android:background="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="Выберите роль: "
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/b_rol_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Администратор"
        android:textSize="15dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/b_rol_trener"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Тренер"
        android:textSize="15dp" />

    <Button
        android:id="@+id/b_rol_client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Клиент"
        android:textSize="15dp" />

    <Button
        android:id="@+id/b_rol_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Войти"
        android:textSize="15dp" />

    <Button
        android:id="@+id/b_repass_auth_roli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#00000000"
        android:text="Забыли пароль?"
        android:textSize="15dp" />

    <Button
        android:id="@+id/b_registration_auth_roli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#00000000"
        android:text="Зарегистрироваться"
        android:textSize="15dp" />


</LinearLayout>