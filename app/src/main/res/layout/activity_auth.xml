<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7643F"
    tools:context=".Auth">

    <ImageView
        android:id="@+id/iv_auth"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"

        android:background="@mipmap/ic_launcher" />

    <EditText
        android:id="@+id/et_login_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="Логин"
        android:textSize="25dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/et_password_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="Пароль"
        android:textSize="25dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/b_in_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:background="#E69C4F"
        android:text="Войти"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/b_repass_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:textSize="15dp"
        android:text="Забыли пароль?"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/b_registration_auth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:textSize="15dp"
        android:text="Зарегистрироваться"
        android:layout_marginTop="10dp"/>



</LinearLayout>